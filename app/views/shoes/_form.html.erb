<%= form_with(model: shoe, local: true) do |form| %>
  <% if shoe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shoe.errors.count, "error") %> prohibited this shoe from being saved:</h2>

      <ul>
      <% shoe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.text_field :model, id: :shoe_model, class: 'mdl-textfield__input' %>
    <%= form.label :model, class: 'mdl-textfield__label' %>
  </div>

  <div class="field">
    <%= form.label :brand %>
    <%= form.collection_select(:brand_id, Brand.all, :id, :name) %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.text_field :isbn, id: :shoe_isbn, class: 'mdl-textfield__input' %>
    <%= form.label :isbn, class: 'mdl-textfield__label' %>
  </div>
  <br>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.number_field :release_year, id: :shoe_release_year, class: 'mdl-textfield__input' %>
    <%= form.label :release_year, class: 'mdl-textfield__label' %>
  </div>
  <br>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.number_field :sku, id: :shoe_sku, class: 'mdl-textfield__input' %>
    <%= form.label :sku, class: 'mdl-textfield__label' %>
  </div>

  <div class="field">
    <%= form.file_field :picture %>
  </div>

  <%= form.submit 'Enviar', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored', style: 'margin-top: 10px;' %>
<% end %>
